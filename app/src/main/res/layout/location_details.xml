<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="false"
    android:background="@drawable/sheetshape"
    app:behavior_peekHeight="50dp"
    android:elevation="10dp"
    android:layout_margin="5dp"
    android:id="@+id/bottomSheetId">


    <View
        android:id="@+id/empView"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#6C6C6C"
        android:layout_marginHorizontal="120dp"
        />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="City" />

    <TextView
        android:id="@+id/tempInBottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:textSize="25sp"
        tools:text="25" />

    <TextView
        android:id="@+id/statusInBottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityName"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="Status" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/humidity"
        tools:text="Humidity"
        android:layout_below="@+id/statusInBottomSheet"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/windSpeed"
        tools:text="wind Speed"
        android:layout_below="@+id/humidity"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maxTemp"
        tools:text="Max Temp"
        android:layout_below="@+id/windSpeed"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/minTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maxTemp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        tools:text="Min Temp" />


</RelativeLayout>